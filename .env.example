# Stream-Syntra Environment Configuration
# Copy this file to .env and configure your environment variables

# ===========================================
# GitHub Integration (Optional)
# ===========================================
# GitHub Personal Access Token for live data ingestion
# Create at: https://github.com/settings/personal-access-tokens
GITHUB_TOKEN=your_github_personal_access_token_here

# ===========================================
# Docker Configuration
# ===========================================
# Fix Docker permissions on Linux/macOS
# DOCKER_COMPOSE_USER_ID=1000  # Use: $(id -u)

# ===========================================
# QuestDB Configuration
# ===========================================
# QuestDB database connection settings
QDB_CLIENT_HOST=host.docker.internal
QDB_CLIENT_PORT=8812
QDB_CLIENT_USER=admin
QDB_CLIENT_PASSWORD=quest
QDB_SSL_MODE=disable

# QuestDB HTTP endpoints
QUESTDB_HTTP_ENDPOINT=host.docker.internal:9000
QUESTDB_HTTP_URL=http://host.docker.internal:9000
QUESTDB_METRICS_URL=http://host.docker.internal:9003

# Optional QuestDB HTTP token for secured instances
# QUESTDB_HTTP_TOKEN=your_questdb_token_here

# ===========================================
# Kafka Configuration
# ===========================================
# Kafka retention settings (in hours)
KAFKA_RETENTION_HOURS=168  # 7 days default

# ===========================================
# Service Ports (Advanced Configuration)
# ===========================================
# Uncomment and modify if you need different ports
# GRAFANA_PORT=3000
# QUESTDB_HTTP_PORT=9000
# QUESTDB_PG_PORT=8812
# KAFKA_BROKER_1_PORT=9092
# KAFKA_BROKER_2_PORT=9093
# JUPYTER_PORT=8888
# KAFKA_CONNECT_1_PORT=8083
# KAFKA_CONNECT_2_PORT=8084
# SCHEMA_REGISTRY_PORT=8081

# ===========================================
# TLS/Security Configuration
# ===========================================
# Skip TLS verification for development (set to true for production)
QUESTDB_SKIP_TLS_VERIFICATION=false

# ===========================================
# Performance Tuning
# ===========================================
# JVM heap settings for Kafka brokers (optional)
# KAFKA_HEAP_OPTS=-Xmx1G -Xms1G

# Maximum number of Kafka Connect tasks
# CONNECT_TASKS_MAX=5

# ===========================================
# Monitoring & Observability
# ===========================================
# Enable detailed metrics collection
# QDB_METRICS_ENABLED=TRUE

# Grafana plugin installation
# GF_INSTALL_PLUGINS=questdb-questdb-datasource

# ===========================================
# Development Settings
# ===========================================
# Enable restart capability for Jupyter
# RESTARTABLE=yes

# Jupyter notebook command
# DOCKER_STACKS_JUPYTER_CMD=notebook